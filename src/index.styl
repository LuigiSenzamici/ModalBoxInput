@import "./style/*";


.MBI-box
	font-size:16px
	font-family: "Arial"
	padding: 0 0 10px 0px
	border-radius: 0 0 10px 10px
	box-shadow: black 5px 15px 20px


.MBI-titleBox
	padding: 5px 0 5px 5px
	background-color:cornflowerblue;
	.MBI-Text
		color:white

.MBI-closeButton
	color:white
	width: 18px
	height: 18px
	background-color:red

.MBI-TextBox
	text-align:center
	padding: 10px 0

.MBI-inputBox
	padding: 10px
	clear: both


.MBI-inlineInputBox
	padding: 5px 0 0 0

	label
		display:inline-block
		width: 25%
		text-align: right
		padding-right: 10px

	input
		display:inline-block
		width: 60%
		height: 22px
		font-size: 16px
		padding-left:3px
		border-radius: 5px


.MBI-ErrorText
	text-align:center
	color:red

.MBI-buttonBox 
	text-align:center


.MBI-okButton
	@extends .bottone

.MBI-resetButton
	@extends .bottone


	


	





